        lib/common.lib.php ÀÇ µÎ°³ ÇÔ¼ö°¡ ¼öÁ¤ µÇ¾ú½À´Ï´Ù.


        function conv_content($content, $html)
            
            ...

            //$content = preg_replace("/(ex)(pression)/i", "&#101&#120;$2", $content);
            ...
            // ÀÌ·± °æ¿ì¸¦ ¹æÁöÇÔ <IMG STYLE="xss:expr/*XSS*/ession(alert('XSS'))">
            $content = preg_replace("#\/\*.*\*\/#iU", "", $content);

            $pattern = "";
            $pattern .= "(e|&#(x65|101);?)";
            $pattern .= "(x|&#(x78|120);?)";
            $pattern .= "(p|&#(x70|112);?)";
            $pattern .= "(r|&#(x72|114);?)";
            $pattern .= "(e|&#(x65|101);?)";
            $pattern .= "(s|&#(x73|115);?)";
            $pattern .= "(s|&#(x73|115);?)";
            $pattern .= "(i|&#(x6a|105);?)";
            $pattern .= "(o|&#(x6f|111);?)";
            $pattern .= "(n|&#(x6e|110);?)";
            $content = preg_replace("/".$pattern."/i", "__EXPRESSION__", $content);


        ...


        function bad_tag_convert($code)
            
            ...

