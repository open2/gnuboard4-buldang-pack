            // SESSION ¼³Á¤
            //-------------------------------------------
            include_once("$g4[path]/lib/dbsession.lib.php");
            $session = new g4_dbsession();
            session_set_save_handler(array($session, 'open'), 
                                     array($session, 'close'),
                                     array($session, 'read'),
                                     array($session, 'write'),
                                     array($session, 'destroy'),
                                     array($session, 'gc'));

            session_set_cookie_params(0, "/");
            ini_set("session.cookie_domain", $g4['cookie_domain']);
            ini_set("session.cache_expire", 180); // ¼¼¼Ç Ä³½¬ º¸°ü½Ã°£ (ºĞ) 180ºĞ == 3½Ã°£
            ini_set("session.gc_maxlifetime", 10800); // session dataÀÇ garbage collection Á¸Àç ±â°£À» ÁöÁ¤ (ÃÊ) 10800ÃÊ == 3½Ã°£
            ini_set("session.use_trans_sid", 0);    // PHPSESSID¸¦ ÀÚµ¿À¸·Î ³Ñ±âÁö ¾ÊÀ½
            ini_set("url_rewriter.tags",""); // ¸µÅ©¿¡ PHPSESSID°¡ µû¶ó´Ù´Ï´Â°ÍÀ» ¹«·ÂÈ­ÇÔ (ÇØ¶ã³è´Ô²²¼­ ¾Ë·ÁÁÖ¼Ì½À´Ï´Ù.)

